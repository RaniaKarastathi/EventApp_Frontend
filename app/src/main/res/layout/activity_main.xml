<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity"
    android:background="@color/backgroundColor">


    <TextView
        android:id="@+id/appNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Events App"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/descriptionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:text="Let's Find Events Near You"
        android:textSize="17sp"
        android:textStyle="bold" />

    <AutoCompleteTextView
        android:id="@+id/citySearchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type your city"
        android:height="48dp"
        android:inputType="text"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/editbox_background"
        android:drawablePadding="10dp" />

    <TextView
        android:id="@+id/description2Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="16dp"
        android:text="Find A Category You Like"
        android:textSize="15sp"
        android:textStyle="bold" />
    <android.widget.ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Buttons for Categories -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/concertBtn"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/btn_background"
                android:padding="5dp"
                android:text="Concert"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/theaterBtn"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="Theater"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_background"
                android:textSize="15sp"
                android:padding="5dp"
                android:layout_marginEnd="16dp"/>
            <Button
                android:id="@+id/festivalBtn"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/btn_background"
                android:padding="5dp"
                android:text="Festival"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/sportsBtn"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="Sports"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_background"
                android:textSize="15sp"
                android:padding="5dp"
                android:layout_marginEnd="16dp"/>
            <Button
                android:id="@+id/artBtn"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/btn_background"
                android:padding="5dp"
                android:text="Art"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/FashionBtn"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="Fashion"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_background"
                android:textSize="15sp"
                android:padding="5dp"
                android:layout_marginEnd="16dp"/>
        </LinearLayout>
    </android.widget.ScrollView>
</LinearLayout>